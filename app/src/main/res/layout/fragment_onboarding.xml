<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.triversoft.diary.ui.onboarding.OnboardingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pagerOnboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <RelativeLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_36sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_16sdp"
                app:dotsColor="#4D727272"
                app:dotsCornerRadius="@dimen/_6sdp"
                app:dotsSize="@dimen/_6sdp"
                app:dotsSpacing="@dimen/_4sdp"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/color_FFD901"/>

            <TextView
                android:id="@+id/btnSkip"
                style="@style/text_style_16_bold"
                android:textColor="@color/black"
                android:text="@string/skip"
                android:layout_gravity="end"
                android:layout_alignParentStart="true"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_btn_ripple_transparent"
                />

            <TextView
                android:id="@+id/btnNext"
                style="@style/text_style_16_bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:background="@drawable/bg_radius_12"
                android:text="@string/next"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_centerVertical="true"
                 />


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
